<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
	    android:id="@+id/username_area"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:text="Username@Domain" 
			android:id="@+id/textView1"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</TextView>
	    <EditText android:id="@+id/editText0" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textPassword">
    		<requestFocus></requestFocus>
    	</EditText>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/password_area"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:text="Password" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	    <EditText android:id="@+id/editText1" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textPassword">
    		<requestFocus></requestFocus>
    	</EditText>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/domain_area"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		<EditText android:layout_weight="1" android:id="@+id/editText2" android:layout_width="match_parent" android:layout_height="wrap_content"></EditText>
		<TextView android:text=".freeagentcentral.com" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<Button android:text="Login" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>	